<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >
        
        <ImageView 
            android:id="@+id/qq1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qq"/>
        
        <ImageView 
            android:id="@+id/qq2"
            android:layout_width="600dp"
            android:layout_height="50dp"
            android:src="@drawable/qql"
            android:layout_toRightOf="@+id/qq1"
            android:layout_alignBottom="@+id/qq1"/>
        
        <EditText 
            android:id="@+id/et1"
            android:layout_width="600dp"
            android:layout_height="50dp"
            android:hint="QQ/Email/Phone number"
            android:layout_below="@+id/qq1"/>
        
        <EditText 
            android:id="@+id/et2"
            android:layout_width="600dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_below="@+id/et1"/>
        
        <CheckBox 
            android:id="@+id/ckb1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="记住密码"
            android:layout_below="@+id/et2"
            />
        
        <CheckBox 
            android:id="@+id/ckb3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="隐身登录"
            android:layout_below="@+id/ckb1"/>

        <CheckBox
            android:id="@+id/ckb4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/ckb3"
            android:layout_alignParentRight="true"
            android:text="静音登录" />

        <CheckBox
            android:id="@+id/ckb2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/ckb1"
            android:layout_alignParentRight="true"
            android:text="自动登录" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ckb3"
             
            android:text="Sign In"
            android:layout_centerHorizontal="true"/>
        
    </RelativeLayout>

</RelativeLayout>
